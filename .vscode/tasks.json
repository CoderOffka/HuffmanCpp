{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "taskName": "build",
            "command": "g++",
            "args": [
                "-Wall",
                "-std=c++14",
                "${relativeFile}",
                "-o",
                "Release/${workspaceRootFolderName}.exe"
            ],
            "problemMatcher": []
        }
    ]
}